<%- include('menu') -%>
<%- include('navbar') -%>

<div class="main-content">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card" style="min-height: 485px">
                <div class="card-header card-header-text">
                    <h4 class="card-title">Funcionarios</h4>
                    <p class="category">Total de funcionarios cadastrados: <%= modelo.length%></p>
                </div>
                <div class="card-content table-responsive" style="padding: 10px;">
                    <th class="d-print-none"><a class="btn btn-sm btn-success" href="/criar">Novo
                        Funcionario</a>
                    <table class="table table-hover">
                        <thead class="text-primary">
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Função</th>
                                <th>Email</th>
                                <th>Senha</th>
                                <th colspan="2" style="text-align:center;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const funcionarios of modelo) { %>
                                <tr>
                                    <td>
                                        <%= funcionarios.id_func %>
                                    </td>
                                    <td>
                                        <%= funcionarios.nome %>
                                    </td>
                                    <td>
                                        <%= funcionarios.funcao %>
                                    </td>
                                    <td>
                                        <%= funcionarios.email %>
                                    </td>
                                    <td>
                                        <%= funcionarios.senha %>
                                    </td>
                                    <td><a href="/editar/<%= funcionarios.id_func%>"
                                            class="btn btn-sm btn-warning" style="width: 100%;">Editar</a>
                                    </td>
                                    <td><a href="/excluir/<%= funcionarios.id_func%>"
                                            class="btn btn-sm btn-danger" style="width: 100%;">Excluir</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>