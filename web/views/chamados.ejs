<%- include('menu') -%>
<%- include('navbar') -%>

<div class="main-content">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card" style="min-height: 485px">
                <div class="card-header card-header-text">
                    <h4 class="card-title">Controle de Chamados</h4>
                    <p class="category">Total de chamados: <%= modelo.length%></p>
                </div>
                <div class="card-content table-responsive" style="padding: 10px;">
                    <th class="d-print-none"><a class="btn btn-sm btn-success" href="/abrirChamado">Novo
                        Chamado</a>
                    <table class="table table-hover">
                        <thead class="text-primary">
                            <tr>
                                <th>Nº Chamado</th>
                                <th>Titulo</th>
                                <th>Descrição</th>
                                <th style="text-align:center;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const chamados of modelo) { %>
                                <tr>
                                    <td>
                                        <%= chamados.id_chamado %>
                                    </td>
                                    <td>
                                        <%= chamados.titulo %>
                                    </td>
                                    <td>
                                        <%= chamados.descricao %>
                                    </td>
                                    <td><a href="/excluirChamado/<%= chamados.id_chamado%>"
                                            class="btn btn-sm btn-danger" style="width: 100%;">Excluir</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>